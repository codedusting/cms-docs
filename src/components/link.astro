---
interface Props {
  href: string;
  title: string;
  class?: string;
}

const { href, title, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  class={`inline-block rounded px-4 py-2 text-gray-600 transition-colors hover:text-[#D7003D] dark:text-gray-400 dark:hover:text-white ${className}`}
  data-nav-link={title}
>
  <slot />
</a>
